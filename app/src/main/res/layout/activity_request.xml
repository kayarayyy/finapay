<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.request.RequestActivity">

    <!-- Input Referral -->
    <TextView
        android:id="@+id/referral_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referral Code"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/referral_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter referral code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/referral_label"
        android:layout_marginTop="8dp"
        android:inputType="text"/>

    <!-- Input Amount -->
    <TextView
        android:id="@+id/amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/referral_input"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/amount_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_label"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"/>

    <!-- Input Tenor -->
    <TextView
        android:id="@+id/tenor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amount_input"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/tenor_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter tenor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenor_label"
        android:layout_marginTop="8dp"
        android:inputType="number"/>

    <!-- KTP Photo Upload -->
    <TextView
        android:id="@+id/ktp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload KTP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tenor_input"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/upload_ktp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload KTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ktp_label"
        android:layout_marginTop="8dp"/>

    <!-- Map View for Latitude and Longitude -->
    <TextView
        android:id="@+id/map_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Location"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_ktp_button"
        android:layout_marginTop="16dp"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_label"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
